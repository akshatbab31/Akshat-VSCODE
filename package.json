{
  "name": "extendscript-debug",
  "displayName": "ExtendScript Debugger",
  "version": "1.1.2",
  "publisher": "Adobe",
  "description": "%extension.description%",
  "icon": "images/esdebug-icon.png",
  "galleryBanner": {
    "color": "#FFFFFF",
    "theme": "light"
  },
  "author": {
    "name": "Adobe"
  },
  "license": "Apache-2.0",
  "keywords": [
    "extendscript",
    "debugger",
    "estk",
    "creative cloud",
    "esdebug"
  ],
  "engines": {
    "vscode": "^1.36.0",
    "node": "^10.11.0"
  },
  "categories": [
    "Debuggers"
  ],
  "repository": {},
  "private": true,
  "scripts": {
    "prepublish": "gulp build",
    "compile": "gulp compile",
    "build": "gulp build",
    "tslint": "gulp tslint",
    "watch": "gulp watch",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "package": "gulp package",
    "publish": "gulp publish"
  },
  "dependencies": {
    "await-notify": "1.0.1",
    "targz": "^1.0.1",
    "upath": "^1.1.0",
    "vscode-debugadapter": "1.27.0",
    "vscode-nls": "4.0.0",
    "xml2js": "^0.4.19",
    "xmlbuilder": "^10.1.1"
  },
  "devDependencies": {
    "@types/mocha": "2.2.48",
    "@types/node": "7.0.55",
    "del": "^3.0.0",
    "event-stream": "3.3.4",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-filter": "^5.0.1",
    "gulp-tslint": "8.1.3",
    "gulp-typescript": "3.2.2",
    "gulp-util": "^3.0.8",
    "mocha": "5.0.1",
    "run-sequence": "^2.2.0",
    "tslint": "5.9.1",
    "typescript": "2.6.2",
    "vsce": "1.37.5",
    "vscode": "1.1.10",
    "vscode-debugadapter-testsupport": "1.27.0",
    "vscode-nls-dev": "^3.2.3"
  },
  "main": "./dist/extension/Extension",
  "activationEvents": [
    "onDebug",
    "onLanguage:javascript",
    "onLanguage:extendscript",
    "onLanguage:javascriptreact",
    "onCommand:extension.extendscript-debug.askForScriptName"
  ],
  "contributes": {
    "breakpoints": [
      {
        "language": "javascript"
      },
      {
        "language": "extendscript"
      },
      {
        "language": "javascriptreact"
      }
    ],
    "commands": [
      {
        "command": "extension.extendscript-debug.selectActiveTarget",
        "title": "%select.active.target%"
      },
      {
        "command": "extension.extendscript-debug.selectActiveEngine",
        "title": "%select.active.engine%"
      },
      {
        "command": "extension.extendscript-debug.exportToJSXBin",
        "title": "%export.to.jsxbin%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "",
          "command": "extension.extendscript-debug.exportToJSXBin"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.extendscript-debug.selectActiveTarget",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": ""
      },
      {
        "command": "extension.extendscript-debug.selectActiveEngine",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": ""
      },
      {
        "command": "extension.extendscript-debug.exportToJSXBin",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j",
        "when": ""
      }
    ],
    "debuggers": [
      {
        "type": "extendscript-debug",
        "label": "ExtendScript Debug",
        "program": "./dist/adapter/ESDebugAdapter.js",
        "runtime": "node",
        "languages": [
          "extendscript",
          "javascript",
          "javascriptreact"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "%extendscript.launch.program.description%",
                "default": "${workspaceFolder}/${command:AskForScriptName}"
              },
              "cwd": {
                "type": "string",
                "description": "%extendscript.launch.cwd.description%",
                "default": "${workspaceFolder}"
              },
              "targetSpecifier": {
                "type": "string",
                "description": "%launch.target.description%",
                "default": "empty"
              },
              "engineName": {
                "type": "string",
                "description": "%launch.engine.description%",
                "default": "main"
              },
              "targetStartedSession": {
                "type": "boolean",
                "description": "%launch.targetstartedsession.description%",
                "default": false
              },
              "breakXML": {
                "type": "string",
                "description": "%launch.breakXML.description%",
                "default": ""
              },
              "excludes": {
                "type": "array",
                "description": "%launch.excludes.description%",
                "items": {
                  "type": "string"
                },
                "default": [
                  "undefined",
                  "builtin",
                  "Function",
                  "prototype"
                ]
              },
              "maxArrayElements": {
                "type": "number",
                "description": "%launch.max.array.elements.description%",
                "default": 20
              },
              "trace": {
                "type": "boolean",
                "description": "%extendscript.debug.adapter.trace.description%",
                "default": true
              },
              "traceString": {
                "type": "string",
                "description": "%extendscript.debug.adapter.trace.string.description%",
                "default": ""
              },
              "logFile": {
                "type": "string",
                "description": "%extendscript.logfile.description%",
                "default": ""
              },
              "dontBreakOnErrors": {
                "type": "boolean",
                "description": "%extendscript.debug.session.dontBreakOnErrors.description%",
                "default": true
              },
              "debugLevel": {
                "type": "number",
                "description": "%extendscript.debug.session.debugLevel.description%",
                "default": 1
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "%extendscript.debug.session.stopOnEntry.description%",
                "default": false
              },
              "clearRuntimeError": {
                "type": "boolean",
                "description": "%extendscript.debug.session.clearRuntimeError.description%",
                "default": true
              },
              "selectTargetColor": {
                "type": "string",
                "description": "%extendscript.selectTargetColor.description%",
                "default": "yellow"
              },
              "connectedTargetColor": {
                "type": "string",
                "description": "%extendscript.connectedTargetColor.description%",
                "default": "white"
              },
              "syntaxErrorHighlightColor": {
                "type": "string",
                "description": "%extendscript.syntaxErrorHighlightColor.description%",
                "default": "#ff00003a"
              },
              "extensionMode": {
                "type": "string",
                "description": "%extendscript.extension.extensionMode.description%",
                "default": "active"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "extendscript-debug",
            "request": "launch",
            "name": "%extendscript.ask.for.script.name%",
            "program": "${workspaceFolder}/${command:AskForScriptName}",
            "stopOnEntry": false
          }
        ],
        "configurationSnippets": [
          {
            "label": "%extendscript.configurationSnippets.label%",
            "description": "%extendscript.configurationSnippets.description%",
            "body": {
              "type": "extendscript-debug",
              "request": "launch",
              "name": "%extendscript.ask.for.script.name%",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForScriptName}\"",
              "stopOnEntry": false
            }
          }
        ],
        "variables": {
          "AskForScriptName": "extension.extendscript-debug.askForScriptName"
        }
      }
    ]
  }
}
